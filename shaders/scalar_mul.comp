#version 450
#include "in_size.comp"
layout (local_size_x = LOCAL_SIZE_X) in;

layout(binding = 0) buffer Data {
    float data[];
};

layout(push_constant) uniform Scalar {
    float scalar;
};

void main() {
    uint gid = gl_GlobalInvocationID.x;
    if (gid >= data.length()) return;
    data[gid] *= scalar;
}
